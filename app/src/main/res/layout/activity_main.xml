<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/theme_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_test"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日间"
        android:background="@drawable/btn_bg"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="深色"
        android:background="@drawable/btn_bg"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/btn_default"
        app:layout_constraintStart_toEndOf="@+id/btn_default"
        app:layout_constraintTop_toTopOf="@+id/btn_default" />

    <Button
        android:id="@+id/btn_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转"
        android:background="@drawable/btn_bg"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/btn_default"
        app:layout_constraintStart_toEndOf="@+id/btn_dark"
        app:layout_constraintTop_toTopOf="@+id/btn_default" />

</androidx.constraintlayout.widget.ConstraintLayout>